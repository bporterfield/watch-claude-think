{
  "name": "watch-claude-think",
  "version": "1.0.5",
  "description": "A real-time view into Claude Code's thinking brain",
  "license": "MIT",
  "author": "bporterfield",
  "type": "module",
  "main": "./dist/cli.js",
  "homepage": "https://github.com/bporterfield/watch-claude-think",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bporterfield/watch-claude-think.git"
  },
  "bugs": {
    "url": "https://github.com/bporterfield/watch-claude-think/issues"
  },
  "keywords": [
    "claude",
    "claude-code",
    "cli",
    "monitoring",
    "thinking",
    "anthropic",
    "terminal",
    "developer-tools",
    "ai"
  ],
  "bin": {
    "watch-claude-think": "dist/cli.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*",
    "!dist/.tsbuildinfo"
  ],
  "scripts": {
    "build": "tsc -b",
    "package": "tsdown --minify && cp src/brain-absolutely dist/brain-absolutely",
    "prepublishOnly": "npm run clean && npm run typecheck && npm run lint && npm test && npm run package",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "clean": "rimraf dist **/*.tsbuildinfo",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:scratch": "eslint scratch --config scratch/eslint.config.mjs",
    "clean:scratch": "find scratch -type f ! -name '.eslintrc*' ! -name 'eslint.config.*' -delete 2>/dev/null || true",
    "check": "npm run typecheck && npm run lint",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:unit": "vitest run test --exclude='**/*.e2e.test.ts'",
    "test:e2e": "vitest run test/e2e",
    "test:coverage": "vitest run --coverage",
    "test:install": "npm pack && npm install -g ./watch-claude-think-*.tgz && watch-claude-think --version || echo 'Installation test passed (CLI runs)' && npm uninstall -g watch-claude-think && rm watch-claude-think-*.tgz",
    "watch": "npm run build && node dist/cli.js",
    "dev": "tsx src/cli.tsx"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/marked-terminal": "^6.1.1",
    "@types/node": "^24.7.2",
    "@types/react": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tsdown": "^0.15.7",
    "tsx": "^4.20.5",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.46.1",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "chokidar": "^4.0.3",
    "ink": "^6.3.1",
    "marked": "^15.0.12",
    "marked-terminal": "^7.3.0",
    "p-queue": "^9.0.0",
    "react": "^19.2.0",
    "strip-ansi": "^7.1.0"
  }
}
